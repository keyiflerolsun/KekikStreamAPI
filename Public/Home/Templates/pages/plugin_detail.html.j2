{% extends "_html_taban.html.j2" %}


{% block breadcrumbs %}
<nav class="breadcrumbs">
    <div class="breadcrumbs-item">
        <a href="/" class="breadcrumbs-link"><i class="fas fa-home"></i> Ana Sayfa</a>
    </div>
    <div class="breadcrumbs-item">
        <span class="breadcrumbs-current">{{ plugin.name }}</span>
    </div>
</nav>
{% endblock %}


{% block icerik %}

<div class="detail-container">
    <div class="detail-header">
        <div class="header-top">
            <div class="header-content">
                <div class="plugin-header-title">
                    {% if plugin.favicon %}
                        <img src="{{ plugin.favicon }}" alt="{{ plugin.name }}" class="plugin-favicon-lg">
                    {% else %}
                        <i class="fas fa-film plugin-icon-lg"></i>
                    {% endif %}
                    <h1 class="detail-title">{{ plugin.name }}</h1>
                </div>
                <div class="detail-subtitle">
                    <span class="badge">Dil: {{ plugin.language }}</span>
                    <a href="{{ plugin.main_url }}" target="_blank" class="badge badge-secondary" title="{{ plugin.main_url }}">
                        {{ plugin.main_url }} <i class="fas fa-external-link-alt"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="header-description">
            <p>{{ plugin.description }}</p>
        </div>
    </div>

    <div class="search-container">
        <form method="GET" action="/ara/{{ plugin.name }}" class="search-form">
            <input type="text" name="sorgu" class="search-input" placeholder="Bu eklenti iÃ§inde ara..." required>
            <button type="submit" class="search-button">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>

    <div>
        <h2>Kategoriler</h2>
        <div class="grid" style="grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));">
            {% for url, category in plugin.main_page.items() %}
                <a href="/kategori/{{ plugin.name }}?kategori_url={{ url }}&kategori_adi={{ category }}" class="card">
                    <div class="card-content">
                        <h3 class="card-title unquote">{{ category }}</h3>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}