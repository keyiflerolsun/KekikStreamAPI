<!doctype html>
<html lang="tr">

<head>
    <!-- ? Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{ title }}</title>

    {#- URL Sabitleri (request.base_url kullanarak dinamik URL oluştur) -#}
    {%- set base_url_str = request.base_url|string %}
    {#- HTTP'yi HTTPS'ye dönüştür -#}
    {%- if '127.0.0.1' not in base_url_str and '10.0.0.' not in base_url_str %}
        {%- set base_url_str = base_url_str.replace('http://', 'https://') %}
    {%- endif %}
    {#- Sondaki eğik çizgiyi kaldır -#}
    {%- if base_url_str.endswith('/') %}
        {%- set base_url = base_url_str[:-1] %}
    {%- else %}
        {%- set base_url = base_url_str %}
    {%- endif %}

    <!-- ? Basic SEO Meta Tags -->
    <meta name="description" content="{{ description }}">
    <meta name="author" content="keyiflerolsun">
    <meta name="publisher" content="keyiflerolsun">

    <!-- ? Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="{{ site_name }}">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:url" content="{{ base_url }}/">
    <meta property="og:image" content="{{ base_url }}/logo.png">
    <meta property="og:image:alt" content="{{ site_name }} Logo">
    <meta property="og:locale" content="tr_TR">

    <!-- ? Twitter Card -->
    <meta name="twitter:title" content="{{ title }}">
    <meta name="twitter:description" content="{{ description }}">
    <meta name="twitter:image" content="{{ base_url }}/logo.png">

    <!-- ? Canonical & Alternate -->
    <link rel="canonical" href="{% block canonical %}{{ base_url }}/{% endblock %}">

    <!-- ? Structured Data -->
    {%- block structured_data %}
    {%- endblock %}

    <!-- ? Font Awesome -->
    <link rel="dns-prefetch" href="//cdnjs.cloudflare.com">
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/fontawesome.min.css" media="print" onload="this.media='all'" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/solid.min.css" media="print" onload="this.media='all'" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/brands.min.css" media="print" onload="this.media='all'" crossorigin="anonymous">

    <!-- ? Google Fonts - Preconnect for Performance -->
    <link rel="dns-prefetch" href="//fonts.gstatic.com">
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" media="print" onload="this.media='all'" crossorigin="anonymous">

    <!-- ? Statik CSS -->
    <link rel="stylesheet" href="{{ url_for('static_home', path='CSS/style.bundle.min.css') }}" fetchpriority="high">

    <!-- ? Ek CSS -->
    {%- block css %}
    {%- endblock %}

    <!-- ? Favicon -->
    <link rel="shortcut icon" href="{{ base_url ~ '/favicon.ico' }}" type="image/x-icon"/>

    <!-- ? Robots direktifleri -->
    <meta name="robots" content="{% block robots %}index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1{% endblock %}">
    <meta name="googlebot" content="{% block googlebot %}index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1{% endblock %}">
    <meta name="bingbot" content="{% block bingbot %}index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1{% endblock %}">
    <link rel="preconnect" href="{{ base_url }}" crossorigin>
</head>

<body>

    {% include 'components/header.html.j2'%}

    <main class="container">
        {% block breadcrumbs %}
            {% include 'components/breadcrumbs.html.j2'%}
        {% endblock %}

        {% block icerik %}
        {% endblock %}
    </main>

    {% include 'components/footer.html.j2'%}

    <!-- ? Statik JS -->
    <script type="module" src="{{ url_for('static_home', path='JS/main.min.js') }}" defer crossorigin="anonymous"></script>

    <!-- ? Ek JS -->
    {%- block js %}
    {%- endblock %}

