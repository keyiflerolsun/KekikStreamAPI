        <!-- Chat Section -->
        <aside class="wp-chat-section">
            <!-- Toast Container - Fixed in chat section, NOT in scrollable messages -->
            <div class="wp-toast-container" id="toast-container"></div>
            
        <div class="wp-chat-header">
            <!-- Mobile Tabs -->
            <div class="wp-mobile-tabs">
                <button class="wp-tab-btn active" data-tab="chat" onclick="window.switchTab('chat')">
                    <i class="fa-solid fa-comments"></i>
                    <span>Sohbet</span>
                </button>
                <div class="wp-tab-divider"></div>
                <button class="wp-tab-btn" data-tab="users" onclick="window.switchTab('users')">
                    <i class="fa-solid fa-users"></i>
                    <span>Kişiler</span>
                    <span id="mobile-users-count" class="wp-tab-badge">0</span>
                </button>
            </div>

            <!-- Desktop Header Title -->
            <div class="wp-desktop-header-title">
                <i class="fa-solid fa-comments"></i>
                <span>Sohbet</span>
            </div>
            
            <!-- Desktop Controls -->
            <div class="wp-header-controls">

                
                <!-- Desktop Users Button -->
                <button class="wp-header-btn wp-desktop-only" onclick="window.toggleUsersModal()" title="Kişiler">
                    <i class="fa-solid fa-users"></i>
                    <span id="desktop-users-count" class="wp-header-badge">0</span>
                </button>
            </div>
        </div>

        <!-- Users Modal Overlay (Desktop) -->
        <div class="wp-users-modal-overlay" id="users-modal-overlay" onclick="window.toggleUsersModal()"></div>

        <!-- Users List Container -->
        <div class="wp-users-list-container" id="users-list-container">

            <div class="wp-users-list" id="users-list">
                <!-- Users will be dynamically added -->
            </div>
        </div>

            <!-- Chat Messages -->
            <div class="wp-chat-messages" id="chat-messages">
                <!-- Spacer - mesajları aşağı itmek için -->
                <div class="wp-chat-spacer"></div>
                
                <div class="wp-chat-welcome">
                    <i class="fa-solid fa-hand-wave"></i>
                    <p>Hoş geldiniz! Sohbete katılın.</p>
                </div>
            </div>

            <!-- Chat Input -->
            <form class="wp-chat-input" onsubmit="sendMessage(event); return false;">
                <input type="text" id="chat-input" class="wp-input" 
                       placeholder="Mesaj yaz..." maxlength="500"
                       enterkeyhint="send"
                       autocomplete="off"
                       inputmode="text">
                <button type="submit" class="wp-btn wp-btn-send">
                    <i class="fa-solid fa-paper-plane"></i>
                </button>
            </form>
        </aside>
